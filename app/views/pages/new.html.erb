<%= form_for(@page) do |f| %>
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %><br />	
	</p>
	
	<p>
		<%= f.label :slug %><br />
		<%= f.text_field :slug %><br />	
	</p>
	
	<p>
		<%= f.label :content %><br />
		<%= f.text_field :content %><br />	
	</p>
	<p>
		<%= f.submit %>
	</p>		
<% end %>
